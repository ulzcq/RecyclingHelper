<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_my"
    tools:context=".Challenge_my_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="5dp">
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF7F50"
            android:textAlignment="center"
            android:textSize="5pt"
            android:text="※하루에 한 번만 완료가능!※"
            android:paddingBottom="10dp"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            >
            <Button
                android:id="@+id/challenge_first"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="first"
                android:padding="0dp"
                android:layout_marginHorizontal="30px"
                app:backgroundTint="@null"
                android:textColor="#000000"
                android:background="@drawable/button_shape"/>

            <Button
                android:id="@+id/challenge_second"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_shape"
                android:padding="0dp"
                android:layout_marginHorizontal="30px"
                app:backgroundTint="@null"
                android:textColor="#000000"
                android:text="second" />

            <Button
                android:id="@+id/challenge_third"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="third"
                android:padding="0dp"
                android:layout_marginHorizontal="30px"
                app:backgroundTint="@null"
                android:textColor="#000000"
                android:background="@drawable/button_shape"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_gravity="top">
            <Button
                android:id="@+id/challenge_fourth"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="fourth"
                android:padding="0dp"
                android:layout_marginHorizontal="10px"
                app:backgroundTint="@null"
                android:textColor="#000000"
                android:background="@drawable/button_shape"/>
            <Button
                android:id="@+id/challenge_fifth"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="fifth"
                android:padding="0dp"
                android:layout_marginHorizontal="10px"
                app:backgroundTint="@null"
                android:textColor="#000000"
                android:background="@drawable/button_shape"/>
            <Button
                android:id="@+id/challenge_sixth"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="sixth"
                android:padding="0dp"
                android:layout_marginHorizontal="10px"
                app:backgroundTint="@null"
                android:textColor="#000000"
                android:background="@drawable/button_shape"/>

            <Button
                android:id="@+id/challenge_last"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10px"
                android:background="@drawable/button_shape"
                android:padding="0dp"
                android:layout_gravity="fill"
                android:text="seventh"
                android:textColor="#000000"
                app:backgroundTint="@null" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvSuccess"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:visibility="invisible"
            android:text="성공🏆"/>
        <Button
            android:id="@+id/btn_retry"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@drawable/rec_button_shape"
            app:backgroundTint="@null"
            android:visibility="invisible"
            android:enabled="false"
            android:textColor="#000000"
            android:text="다시 도전하기" />
<!--        <Button-->
<!--            android:id="@+id/btn_exit"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginVertical="10dp"-->
<!--            android:background="@android:color/darker_gray"-->
<!--            app:backgroundTint="@null"-->
<!--            android:text="닫기" />-->
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_exit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|top"
        android:background="#00000000"
        android:src="@drawable/cross">

    </ImageButton>
</FrameLayout>